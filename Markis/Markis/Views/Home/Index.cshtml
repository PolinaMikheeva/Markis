@using Markis.Application.DTOs
@{
    ViewData["Title"] = "Home Page";
    var posts = ViewData["Posts"] as List<PostDto>;
    var products = ViewData["Products"] as List<ProductDto>;
}

<!-- Start Search Header -->
<div class="search-header bg-fixed text-center text-light" style="background-image: url(~/img/2440x1578.png);">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="hero-box">
                    <h2>617 Premium Bootstrap Templates & Website Themes</h2>
                </div>
                <div class="search-box">
                    <form action="@Url.Action("Search", "Home")" method="post">
                        <input type="text" placeholder="Search" class="form-control" name="searchText">
                        <button type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Search Header -->
<!-- Start Trend Product
============================================= -->
<div class="trend-product-area product shadow-less bg-gray default-padding bottom-less">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="heading inc-btn">
                    <h4>Latest Templates</h4>
                </div>
            </div>
            <div class="trend-items">
                @if (products != null)
                {
                    @foreach (var product in products.Take(6))
                    {
                        <!-- Single Item -->
                        <div class="col-md-4 col-sm-6 equal-height">
                            <div class="item">
                                <a asp-area="Product" asp-controller="Home" asp-action="Index" asp-route-id="@product.Id"><img src="~/img/favicon.png" alt="Thumb"></a>
                                <div class="info-box">
                                    <div class="top-info">
                                        <h4>
                                            <a asp-area="Product" asp-controller="Home" asp-action="Index" asp-route-id="@product.Id">@product.Title</a>
                                        </h4>
                                        <div class="author">
                                            by <a asp-area="Author" asp-controller="Home" asp-action="Index" asp-route-id="@product.IdentityUserId">
                                                @product.User.Username
                                               </a>
                                        </div>
                                        <div class="author"><span>@product.ReleaseDate.Day</span> @product.ReleaseDate.ToString("MMM, yyyy")</div>
                                    </div>
                                    <div class="bottom-info">
                                        <div class="price">
                                            <h4>$@product.Price</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End Single Item -->
                    }
                }
                <!-- Start More Button Item -->
                <div class="col-md-12 more-btn text-center">
                    <a class="btn btn-theme effect circle btn-md" asp-area="Templates" asp-controller="Home" asp-action="Index">View All <i class="fas fa-spinner"></i></a>
                </div>
                <!-- End More Button Item -->
            </div>
        </div>
    </div>
</div>
<!-- End New Product -->
