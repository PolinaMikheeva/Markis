@using Markis.Domain.Entities
@model Post
@{
    ViewData["Title"] = "Edit Post";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Start input -->
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div class="mb-2">
                        <label class="form-label">Id</label>
                        <input type="text" class="form-control" asp-for="Id" readonly>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Title</label>
                        <input type="text" class="form-control" asp-for="Title">
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Short Description</label>
                        <input type="text" class="form-control" asp-for="ShortDescription">
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Description</label>
                        <input type="text" class="form-control" asp-for="Description">
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Release Date</label>
                        <input type="datetime" class="form-control" asp-for="ReleaseDate">
                    </div>
                    <div class="mb-2">
                        <label class="form-label">UserId</label>
                        <input type="text" class="form-control" asp-for="UserId">
                    </div>
                    <button type="submit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End input -->