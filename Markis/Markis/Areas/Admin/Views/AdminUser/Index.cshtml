@using Markis.Areas.Admin.Models.AdminUser
@model List<AdminUserFetchVM>
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="px-3">
    <div class="container-fluid">
        <!-- start page title -->
        <div class="py-3 py-lg-4">
            <div class="row">
                <div class="col-lg-6">
                    <h4 class="page-title mb-0">@ViewData["Title"]</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="header-title">Get @ViewData["Title"] Table</h4>

                        <table id="basic-datatable" class="table dt-responsive nowrap w-100">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Username</th>
                                    <th>IdentityUserId</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                                     
                            <tbody>
                                @if (Model != null)
                                {
                                    @foreach (var user in Model)
                                    {
                                        <tr>
                                            <td>@user.Id</td>
                                            <td>@user.Username</td>
                                            <td>@user.IdentityUserId</td>
                                            <td>
                                                <a class="btn btn-primary" asp-controller="AdminUser" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                                                @using (Html.BeginForm("Delete", "AdminUser", FormMethod.Post))
                                                {
                                                    @Html.Hidden("id", user.Id)
                                                    <button type="submit" class="btn btn-primary">Delete</button>
                                                }
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>

                    </div> <!-- end card body-->
                </div> <!-- end card -->
            </div><!-- end col-->
        </div>
        <!-- end row-->
    </div>
</div>