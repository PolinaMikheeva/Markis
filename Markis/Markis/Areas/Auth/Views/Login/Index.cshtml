@{
    ViewData["Title"] = "User Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
        <!-- Start Page Heading 
        ============================================= -->
        <div class="page-heading shadow dark bg-fixed text-light text-center" style="background-image: url(~/img/2440x1578.png);">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h2>User Login</h2>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Heading -->

        <!-- Start Breadcrumb Banner 
        ============================================= -->
        <div class="breadcrumb-items text-center">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <ul class="breadcrumb">
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                            <li><a href="#">Page</a></li>
                            <li class="active">Login</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Breadcrumb Banner -->

        <!-- Start Login 
        ============================================= -->
        <div class="login-area bg-gray default-padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3 login-custom">
                        <div class="heading text-center text-light">
                            <h4>Welcome Back</h4>
                            <p>
                                You can sign in with your email. 
                            </p>
                        </div>
                        <div class="login-items">
                            <form method="post">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="form-group">
                                            <input name="userName" class="form-control" placeholder="Username*" type="text">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="form-group">
                                            <input name="password" class="form-control" placeholder="Password*" type="password">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="row">
                                        <button type="submit">
                                            Login
                                        </button>
                                    </div>
                                </div>
                            </form>
                            <p class="link-bottom">Not a member yet? <a asp-area="Auth" asp-controller="Register" asp-action="Index">Register now</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Login -->